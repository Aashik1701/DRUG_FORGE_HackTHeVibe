# ============================================================================
# DrugForge Backend Environment Variables
# Copy this file to .env and fill in your values.
# NEVER commit .env with real keys to version control!
# ============================================================================

# Environment
ENVIRONMENT=development
PORT=5001

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Supabase (Database)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key-here
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/drugforge

# Security
JWT_SECRET_KEY=change-this-to-a-random-32-char-string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ML Models
MODELS_PATH=./models
